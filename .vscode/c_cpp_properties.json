{
    "configurations": [
        {
            "name": "GCC",
            "compilerPath": "${workspaceFolder}/toolchain/i686-elf/bin/i686-elf-gcc",
            "cStandard": "c99",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-x86",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/src/kernel",
                "${workspaceFolder}/toolchain/i686-elf/lib/gcc/i686-elf/15.2.0/include"
            ],
            "defines": [
                "__ELF__"
            ],
            "compilerArgs": [
                "-std=c99",
                "-ffreestanding",
                "-nostdlib",
                "--sysroot=${workspaceFolder}/toolchain/i686-elf"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/src"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}